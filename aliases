alias ll='ls -lh'
alias la='ls -Alh'
alias l='ls -CF'

# sort files by file size
alias lz='ls -hlS'

# sort files by modification time
alias lt='ls -l -t'

# count files
alias count='find . -type f | wc -l'

# copy with progress bar
alias cpv='rsync -ah --info=progress2'

# use grc colorizer
alias go='grc go'
